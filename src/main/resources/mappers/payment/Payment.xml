<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jamjam.bookjeok.domains.payment.repository.mapper.PaymentMapper">
    <select id="findPendingOrderById" resultType="com.jamjam.bookjeok.domains.payment.dto.PendingOrderDTO">
        SELECT member_uid, order_id, total_amount, order_data
        FROM pending_orders
        WHERE order_id = #{orderId}
    </select>
</mapper>